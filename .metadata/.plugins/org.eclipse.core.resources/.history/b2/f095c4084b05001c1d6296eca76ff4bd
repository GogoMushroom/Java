package airlineReservationSystem;

import java.util.Scanner;

class Reservation {


	public static void Reserve(){
		
		//예약 프로그램 도시 정하기 
		//선택한 도시에 맞게 startplace 와 arrplace가 기본 주소에서 3글자 공항 주소로바뀜 
		Scanner sc = new Scanner(System.in);
