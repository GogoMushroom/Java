		 public void printBox(String startplace,String arrplace ,String city) {

				System.out.println("                                             ");	
				System.out.println("            출발 도시                                                도착 도시 ");	
				System.out.println("┌───────────────┐         ┌───────────────┐");
				System.out.println("│      "+startplace+"      │  ---->  │      "+arrplace+"      │");    
				System.out.println("└───────────────┘         └───────────────┘");
				System.out.println("		                                                        ");
				System.out.println(city);
				System.out.println("---------------------------------------------------------◁");
			}
	
		 
