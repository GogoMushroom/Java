package Wilderness;
import java.util.*;

public class Example {
	
	Scanner sc = new Scanner(System.in);
	String Date = "yyyy_MM_dd";
	String GoDate = "";
	String BackDate = "";
	String startplace = "QQQ" ;
	String arrplace ="ZZZ";
	int price = 0;
	String Go = "아직 정해지지 않았습니다.";
	String Back = "아직 정해지지 않았습니다.";
	static int totalprice = 0;
	
	
	
	public void runReservation() {
		
		date();
		Reserve();
		Plane();
		addFood();
		addBaggage();
		upSeat();
